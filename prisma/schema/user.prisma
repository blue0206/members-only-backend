model User {
    id            Int            @id @default(autoincrement())
    username      String         @unique
    firstName     String
    middleName    String?
    lastName      String?
    password      String
    avatar        String?
    role          Role           @default(USER)
    messages      Message[]
    refreshTokens RefreshToken[]
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
}

enum Role {
    ADMIN
    MEMBER
    USER
}
