model User {
    id           Int       @id @default(autoincrement())
    username     String    @unique
    firstName    String
    middleName   String?
    lastName     String?
    password     String
    avatar       String?
    role         Role
    posts        Message[]
    refreshToken String
    // TODO: Index the fields which need to be indexed.
}

enum Role {
    ADMIN
    MEMBER
    USER
}
